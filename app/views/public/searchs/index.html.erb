<table class="table table-hover table-inverse">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "200x120" %>
           <% else %>
            <%= image_tag 'no_image', size: "200x120" %>
          <% end %>
        </td>
        <td>
          空港名：<%= post.airport_name %><br>
          カテゴリー：<%= post.genre.parent.name %>>✈︎><%= post.genre.name %>
        </td>
      </tr>
  </tbody>
</table>