  <h4><i class="fas fa-bookmark"></i>&ensp;Bookmark一覧</h4>
  <% bookmark_posts.each do |post| %>
  <table class="table table-hover table-inverse">
    <tr>
      <td class="table-img">
        <% if post.image.attached? %>
          <%= link_to post_path(post) do %>
          <%= image_tag post.image, size: "200x120" %>
          <% end %>
        <% else %>
          <%= link_to post_path(post) do %>
          <%= image_tag asset_path('img.jpg'), size: "200x120" %>
           <% end %>
        <% end %>
      </td>
      <td class="table-txt">
        空港名：
        <%= link_to post_path(post) do %>
        <%= post.airport_name %>
        <% end %><br>
        カントリー : <%= post.genre.name %><br>
        ユーザー名：<%= post.user.name %>
      </td>
    </tr>
  </table>
  <% end %>


