          <h3 class="usershow pt-10 text-center">︎<strong>マイページ✈︎︎</strong></h3>

          <table class="table table-hover">
          <% if @user == current_user %>

            <thead>
              <th>登録情報</th>
              <th><% if @user.name != "guestuser" %>
                  <%= link_to '編集する', mypage_edit_path, class: "btn btn-sm btn-dark" %>
                  <% end %>
              </th>
            </thead>
            <tbody>
              <tr>
            	  <th>会員ID</th>
            	  <th><%= @user.id %></th>
              </tr>
              <tr>
            	  <th>ユーザー名</th>
            	  <th><%= @user.name %></th>
              </tr>
              <tr>
            	  <th>メールアドレス</th>
            	  <th><%= @user.email %></th>
              </tr>
              <tr>
                <th><%= @user.name %>さんの投稿&ensp;/&ensp;ブックマーク一覧 </th>
                <th><%= link_to "一覧を見る" , bookmarks_user_path(@user), class: "btn btn-sm btn-dark" %></th>
              </tr>
            </tbody>
          </table>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>
                  <% if @user.name != "guestuser" %>
                  <%= link_to "退会する" , unsubscribe_path, class: 'btn btn-outline-dark' %>&emsp;
                    コメントや投稿には会員登録が必要です。
                  <% end %>
                </th>
              </tr>
            </thead>
          <% end %>
          </table>
          <div class="back text-center">
            <%= render 'layouts/back' %>
          </div>
