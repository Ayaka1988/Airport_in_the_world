            <!--    <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin f-s-20 text-muted"></i></a>-->
            <!--    </li>-->
            <!--</ul>-->

            <div class="row">
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">UserID:</span> <span class="pull-right"><%= @user.id %></span>
              </div>
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">Name:</span> <span class="pull-right"><%= @user.name %></span>
              </div>
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">Email:</span> <span class="pull-right"><%= @user.email %></span>
              </div>
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">Post&nbsp;</span> <span class="pull-right"><%= link_to "Click here" , posted_user_path(@user), class: "btn btn-sm btn-dark" %></span>
              </div>
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">bookmark&nbsp;</span> <span class="pull-right"><%= link_to "Click here" , bookmarks_user_path(@user), class: "btn btn-sm btn-dark" %></span>
              </div>
              <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600">Follow/Follower&nbsp;</span> <span class="pull-right"><%= link_to "Click here" , bookmarks_user_path(@user), class: "btn btn-sm btn-dark" %></span>
              </div>
