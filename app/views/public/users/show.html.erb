<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">︎マイページ✈︎︎</h3>

      <table class="table table-hover">
        <thead>
          <th>登録情報</th>
          <th><%= link_to '編集する', mypage_edit_path, class: "btn btn-sm btn-info" %></th>
        </thead>
        <tbody>
          <tr>
        	  <th>会員ID</th>
        	  <th><%= @user.id %></th>
          </tr>
          <tr>
        	  <th>ユーザー名</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>メールアドレス</th>
        	  <th><%= @user.email %></th>
          </tr>
          <tr>
            <th><%= @user.name %>さんの投稿/ブックマーク一覧 </th>
            <th><%= link_to "一覧を見る" , bookmarks_user_path(@user), class: "btn btn-sm btn-primary" %></th>
          </tr>
        </tbody>
      </table>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= link_to "退会する" , unsubscribe_path, class: 'btn btn-danger' %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>



