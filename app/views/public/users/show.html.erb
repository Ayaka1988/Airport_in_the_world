

    <div class="mypage">
      <div class="mypage-body">
        <div class="text-center">
          <% if @user == current_user %>
          <%= render 'public/shared/flash' %>
            <div class="noimg">
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, size: "200x200" %>
              <% else %>
                <%= image_tag asset_path('noimg.png'), size: "200x200", class:"rounded-circle m-t-15 w-75px" %>
              <% end %>
            </div>
            <h3 class="m-t-15 m-b-2">My page</h3>

            <!--<ul class="list-inline m-t-15">-->
            <!--    <li class="list-inline-item"><a href="#"><i class="fa fa-facebook-square f-s-20 text-muted"></i></a>-->
            <!--    </li>-->
