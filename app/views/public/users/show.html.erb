              <!--</div>-->
              <div class="under">
                  <% if @user.name != "guestuser" %>
                    <%= link_to 'Edit', mypage_edit_path, class: "btn btn-sm btn-outline-dark" %>
                  <% end %>
                  <% if @user.name != "guestuser" %>
                    <%= link_to "退会する" , unsubscribe_path, class: 'btn btn-sm btn-outline-dark' %>
                  <% end %>
                  <%= render 'layouts/back' %>
              </div>
            </div>
            <% end %>
          </div>
      </div>
    </div>



