  <div class="comments <% if post.comments.count() > 0 %>comment-list<% end %>">
    <table class="comment">
      <% post.comments.each do |comment| %>
        <tr>
          <th><%= comment.user.name %></th>
        </tr>
        <tr>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>
            <%= comment.reply %>
          </td>
        </tr>
        <tr>
          <td>
            <% if user_signed_in? && comment.user == current_user %>
            <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-outline-dark" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>