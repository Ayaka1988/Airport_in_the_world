<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 mt-5 ml-2 mr-5">
      <!--画像-->
      <div class="img mb-10">
      <% if @post.image.attached? %>
       <%= image_tag @post.image, size: "360x270" %>
      <% else %>
       <%= image_tag 'no_image', size: "360x270" %>
      <% end %>
      </div>
    </div>
    <!--空港情報-->
    <div class="col-md-6 mt-5 ml-2 text-center">
    <%#= stylesheet_link_tag 'public/posts' %>
      <div class="info">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>✈︎</th>
              <th scope="col">Airport information</th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <th scope="row">空港名</th>
                <td><%= @post.airport_name %></td>
              </tr>
              <tr>
                <th scope="row">エリア</th>
                <td><%= @post.genre.parent.name %>&nbsp;&nbsp;✈&nbsp;&nbsp;<%= @post.genre.name %></td>
              </tr>
              <tr>
                <th scope="row">営業時間</th>
                <td><%= @post.open_hour %></td>
              </tr>
              <tr>
                <th scope="row">仮眠<br>スペース</th>
                <td><%= @post.sleep_space %></td>
              </tr>
              <tr>
                <th scope="row">治安</th>
                <td><%= @post.security %></td>
              </tr>
              <tr>
                <th scope="row">URL</th>
                <td><%= @post.url %></td>
              </tr>
              <tr>
                <th scope="row">その他</th>
                <td><%= @post.others %></td>
              </tr>
              <tr>
                <th scope="row">ユーザー</th>
                <td><%= @post.user.name %></td>
              </tr>
          </tbody>
        </table>
      </div>
      <% if @post.user == current_user %>
      <%= link_to "投稿を編集", edit_post_path, class:"btn btn-sm btn-info" %>
      <br>
      <br>
      <%= link_to "投稿を削除", post_path(@post.id), class:"btn btn-sm btn-danger" ,method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>
    </div>

    <div class="col-md-2 mt-5 ml-4 text-center">
      <div id="bookmarks_buttons_<%= @post.id %>">
      <%= render "public/bookmarks/bookmarks", post: @post %>
      </div>
      <p>コメント件数：<%= @post.comments.count %></p>
      <!--部分テンプレート：コメント一覧部分-->
      <%= render 'public/comments/index', post: @post %>
      <br>
      <br>
      <!--部分テンプレート：コメントフォーム-->
      <%= render 'public/comments/form', post: @post, comment: @comment %>
    </div>
  </div>
</div>





