<!--部分テンプレート挿入-->
<div class="container">
 <% @posts.each do |post| %>
  <h2><%= post.genre.name %>の空港</h2>
   <table class="table table-hover table-inverse">
    <tr>
     <td class="table-img">
      <% if post.image.attached? %>
       <%= image_tag post.image, size: "200x120" %>
      <% else %>
       <%= image_tag 'no_image', size: "200x120" %>
      <% end %>
     </td>
     <td class="table-txt">
      空港名：<%= post.airport_name %><br>
      カテゴリー：<%= post.genre.parent.name %> <%= post.genre.name %><br>
      ユーザー名：<%= post.user.name %>
     </td>
   </table>
 <% end %>
</div>

