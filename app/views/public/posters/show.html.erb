  <%= render 'public/shared/flash' %>
  <div class="poster">
    <div class="poster-body">
      <div class="text-center">
        <div class="noimg">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "200x200" %>
          <% else %>
            <%= image_tag asset_path('noimg.png'), size: "200x200", class:"rounded-circle m-t-15 w-75px" %>
          <% end %>
        </div>
        <h3 class="postername pt-10 text-center"><%= @user.name %>さんのpage</h3>

        <div class="row">
          <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600"><%= @user.name %>さんのPost&nbsp;</span> <span class="pull-right"><%= link_to "Click here" , posted_user_path(@user), class: "btn btn-sm btn-dark" %></span>
          </div>
          <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600"><%= @user.name %>さんとChat&nbsp;</span> <span class="pull-right"><%= link_to "Let's chat" , chat_path(@user.id), class: "btn btn-sm btn-dark" %></span>
          </div>
          <div class="col-12 border-bottom-1 p-t-30 p-b-20"><span class="pull-left f-w-600"><%= @user.name %>さんをFollow&nbsp;</span>
            <span class="pull-right">
              <% if current_user.following?(@user) %>
                <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete, class: "btn btn-sm btn-dark" %>
              <% else %>
                <%= link_to "Follow", user_relationships_path(@user.id), method: :post, class: "btn btn-sm btn-dark" %>
              <% end %>
            </span>
          </div>
        </div>

        <div class="under">
          <%= render 'layouts/back' %>
        </div>
      </div>
    </div>
  </div>



