    <div class="bk">
      <% if post.bookmarked_by?(current_user) %>
        <h5>
          <%= link_to post_bookmarks_path(post), method: :delete, remote: true do %>
          <i class="fas fa-bookmark"></i><%= post.bookmarks.count %>&ensp;Bookmark解除
          <% end %>
        </h5>
      <% else %>
        <h5>
          <%= link_to post_bookmarks_path(post), method: :post, remote: true do %>
          <i class="far fa-bookmark"></i><%= post.bookmarks.count %>&ensp;Bookmark
          <% end %>
        </h5>
      <% end %>
    </div>